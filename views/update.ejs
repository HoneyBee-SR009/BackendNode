                                    <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                    <input id="login-password" type="text" class="form-control" value="<%=post.name %>" name="name" placeholder="name">
                                </div>
    
                                <div style="margin-bottom: 25px" class="input-group">
                                            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                            <input id="login-username" type="email" class="form-control" value="<%=post.email %>" name="email" value="" placeholder="email">                                       
                                        </div>
                                   
