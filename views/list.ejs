  <%- include('header'); -%>
  <!DOCTYPE html> 
<html> 

<body> 

<table id="example" class="table table-striped table-bordered table-dark table-hover" style="width:100%">
  <tr>
    <th>Sr No</th>
    <th>Name</th>
    <th>Email</th>
    <th>Username</th>
    <th>Image</th>
    <th>Action</th>
  </tr>
  <% if(rows.length>=1){ 
     rows.forEach((post) => { %>
      
  <tr>
  <%  for(var i = 0;i < rows.length;i++) { %>
    <td><%=(i+1)%></td>
    <% } %>

    <td><%=post.name %></td>
    <td><%=post.email%></td>
    <td><%=post.username%></td>
    <td> <img style="height:100px;width:100px;" src="<%=post.image%>" class="responsive-img"></td>
    <!-- <%= typeof file != 'undefined' ? file : '' %> -->
    <td>
        <a href="/upload_view/<%=post.id %>" class="btn btn-success">Upload</a>
        <a href="/update_view/<%=post.id %>" class="btn btn-warning">Update</a>
        <a href="/delete/<%=post.id %>" class="btn btn-danger">Delete</a></td>
  </tr>
  <% })
  }else{ %>
  <tr>
    <h4><td >No User Are Present Here</td></h4>
  </tr>
<% } %>
</table>

</body> 
</html>  